#  https://www.gnu.org/software/make/manual/make.pdf
#  https://www.gnu.org/software/make/manual/

THIS_FILE := $(lastword $(MAKEFILE_LIST))
.PHONY: help build up start down destroy stop restart logs logs-api ps login-timescale login-api db-shell
# Commands available for make:
#  https://question-it.com/questions/4885548/kak-poluchit-spisok-tselej-v-make-fajle
#  https://habr.com/ru/company/ruvds/blog/486682/

# Collect an image from docker-compose.yml
all: dir_create build up

dir_create:			;	mkdir -p ./srcs/data/db
						mkdir -p ./srcs/data/wordpress
						cp -r ./srcs/requirements/mysite ./srcs/data/mysite
						chmod -R 777 ./srcs/data/
# build:				;	docker-compose -f ./srcs/docker-compose-mac.yml --env-file=./srcs/mac.env build --no-cache
build:				;	docker-compose -f ./srcs/docker-compose-mac.yml \
									   --env-file=./srcs/mac.env build
up:					;	docker-compose -f ./srcs/docker-compose-mac.yml \
									   --env-file=./srcs/mac.env up
start:				;	docker-compose -f ./srcs/docker-compose-mac.yml \
									   --env-file=./srcs/mac.env start
stop:				;	docker-compose -f ./srcs/docker-compose-mac.yml \
									   --env-file=./srcs/mac.env stop
down:				;	docker-compose -f ./srcs/docker-compose-mac.yml \
									   --env-file=./srcs/mac.env down
stop_down:			;	docker-compose -f ./srcs/docker-compose-mac.yml \
									   --env-file=./srcs/mac.env stop
						docker-compose -f ./srcs/docker-compose-mac.yml \
									   --env-file=./srcs/mac.env down -v

logs:				;	docker-compose -f ./srcs/docker-compose-mac.yml \
									   --env-file=./srcs/mac.env logs --tail=100 -f

logs-api:			;	docker-compose -f ./srcs/docker-compose-mac.yml \
									   --env-file=./srcs/mac.env logs --tail=100 -f api

ps:					;	docker ps

login_mdb:			;	docker exec -it mariadb bash
login_nginx:		;	docker exec -it nginx bash
login_wp:			;	docker exec -it wordpress bash
login_redis:		;	docker exec -it redis bash
login_vsftpd:		;	docker exec -it vsftpd bash

clean: stop_down
						docker system prune -a
						docker volume rm db resume wordpress1 
						rm -rf ./srcs/data

ls-volume:			;	docker volume ls
ls-container:		;	docker container ls -a
ls-network:			;	docker network ls
ls-image:			;	docker image ls

re: clean all

help:				;	make -pRrq  -f $(THIS_FILE) : 2>/dev/null | awk -v RS= -F: '/^# File/,/^# Finished Make data base/ {if ($$1 !~ "^[#.]") {print $$1}}' | sort | egrep -v -e '^[^[:alnum:]]' -e '^$@$$'